<div class="search_menu">
   <% form_tag officehour_path, :method => 'get' do %>
     <p>
       <%= label_tag "department" %><br />
       <%= select_tag("course_department", options_for_select(Course.departments,@course_department)) %>
   </p>
   <p>    
       <%= label_tag "number" %><br />
       <%= select_tag("course_number", options_for_select(@course_numbers,@course_number)) %>
   </p>
   <p>    
       <%= submit_tag "Search", :name => nil %>
     </p>
   <% end %>
</div>
<div class="search_results">
   <% if @officehours.blank? %>
      <p>There are no office hours currently in the system.</p>
   <% else %>
      <p>These are the office hours in the system:</p>
      <ul id="officehours">
         <% @officehours.each do |o| %>
            <li><%= office_houro.user.displayname %> - 
            <%= o.course.name %></li>
         <% end %>
      </ul>
   <% end %>
</div>
<div class="clear"></div>